@using _210310SimchaFund.Data
@model HistoryViewModel

    <div class="header">
        <h1>History for @Model.FullName</h1>
        <h2>Current Balance: @Model.Transactions.Sum(t => t.Amount).ToString("C")</h2>
    </div>
<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Action</th>
                <th>Date</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Transaction transaction in Model.Transactions)
            {
            <tr>
                <td>@transaction.Action</td>
                <td>@transaction.Date.ToLongDateString()</td>
                <td>@transaction.Amount.ToString("C")</td>
            </tr>
            }
        </tbody>
    </table>
</div>